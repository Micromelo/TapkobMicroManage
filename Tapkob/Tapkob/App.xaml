<Application x:Class="Tapkob.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Tapkob"
             xmlns:viewmodel="clr-namespace:Tapkob.ViewModel"
             xmlns:view="clr-namespace:Tapkob.View"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Templates.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type TypeName=viewmodel:HomeVM}">
                <view:HomeView></view:HomeView>
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=viewmodel:QuestsVM}">
                <view:QuestsView></view:QuestsView>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
