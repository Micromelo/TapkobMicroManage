<UserControl x:Class="Tapkob.View.QuestsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodel="clr-namespace:Tapkob.ViewModel" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="84"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Margin="0,0,10,0">
                <Image Source="/Resources/Icons/icon_trader_prapor.png"
                       Width="64"
                       Height="64">
                </Image>
            </Button>
            <Button Margin="0,0,10,0">
                <Image Source="/Resources/Icons/icon_trader_therapist.png"
                       Width="64"
                       Height="64">
                </Image>
            </Button>
            <Button Margin="0,0,10,0">
                <Image Source="/Resources/Icons/icon_trader_skier.png"
                       Width="64"
                       Height="64">
                </Image>
            </Button>
            <Button Margin="0,0,10,0">
                <Image Source="/Resources/Icons/icon_trader_peacekeeper.png"
                       Width="64"
                       Height="64">
                </Image>
            </Button>
            <Button Margin="0,0,10,0">
                <Image Source="/Resources/Icons/icon_trader_mechanic.png"
                       Width="64"
                       Height="64">
                </Image>
            </Button>
            <Button Margin="0,0,10,0">
                <Image Source="/Resources/Icons/icon_trader_ragman.png"
                       Width="64"
                       Height="64">
                </Image>
            </Button>
            <Button Margin="0,0,10,0">
                <Image Source="/Resources/Icons/icon_trader_jaeger.png"
                       Width="64"
                       Height="64">
                </Image>
            </Button>
            <Button Margin="0,0,10,0">
                <Image Source="/Resources/Icons/icon_trader_fence.png"
                       Width="64"
                       Height="64">
                </Image>
            </Button>
            <Button>
                <Image Source="/Resources/Icons/icon_trader_lightkeeper.png"
                       Width="64"
                       Height="64">
                </Image>
            </Button>
        </StackPanel>

        <ListView ItemsSource="{Binding Tasks}"
                  Grid.Row="1"
                  Margin="5,0,5,5">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Status">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding isCompleted}"
                                           HorizontalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Type">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=taskObjectives[0].type}"
                                           HorizontalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Task">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding name}" 
                                           HorizontalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Required for Kappa">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding kappaRequired}"           
                                           HorizontalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Required for Lightkeeper">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding lightkeeperRequired}"
                                           HorizontalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
